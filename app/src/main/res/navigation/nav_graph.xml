<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/login_fragment">

    <activity
        android:id="@+id/mapsActivity"
        android:name="com.example.burgertracker.map.MapActivity"
        android:label="activity_maps"
        tools:layout="@layout/map_activity">
        <action
            android:id="@+id/action_mapsActivity_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </activity>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.burgertracker.settings.SettingsActivity$SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/settings_activity" />

    <fragment
        android:id="@+id/login_fragment"
        android:name="com.example.burgertracker.login.LoginFragment">
        <action
            android:id="@+id/action_login_fragment_to_mapsActivity2"
            app:destination="@id/mapsActivity"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
</navigation>